{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "$": true,
        "axios": true,
        "require": true,
        "module": true
    },
    "rules": {
        "no-unused-vars": [
            "error",
            { "vars": "all", "args": "none" }
        ],
        "indent": [
            "off",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "block-spacing": [
            "error"
        ],
        "spaced-comment": [
            "error",
            "always",
            { "exceptions": ["-", "+"] }
        ],
        "space-infix-ops": [
            "error",
            { "int32Hint": false }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "off",
            "always"
        ]
    }
}
